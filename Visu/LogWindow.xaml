                </col:ArrayList>
            </ListView.Resources>
        </ListView>-->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1"
                    Click="Button_GetLog"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding Begin}"                            
                            MinWidth="150"/>
                <DatePicker SelectedDate="{Binding End}"
                             MinWidth="150"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
