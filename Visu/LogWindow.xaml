<Window x:Class="Cashbox.Visu.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cashbox.Visu"
        xmlns:m="clr-namespace:Cashbox.Model"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:c="clr-namespace:Cashbox.Visu.Converters"
        mc:Ignorable="d"
        Background="AliceBlue"
        Title="LogWindow" Height="450" Width="800">
    <Window.Resources>
        <c:DateConverter x:Key="DateConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListView Name="LogView"
                  
                  Grid.Column="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding Date, Converter={StaticResource DateConverter}}" Header="1"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Staff}" Header="2"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Total}" Header="3"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Difference}" Header="4"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1"
                    Click="Button_GetLog"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding Begin}"                            
                            MinWidth="150"/>
                <DatePicker SelectedDate="{Binding End}"
                             MinWidth="150"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
